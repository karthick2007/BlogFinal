<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blog home</title>

    <link rel="stylesheet" href="../styles/profile.css">

</head>
<body ng-app ='app' ng-controller="profileCtrl">
<% include partials/header %>
<div class="container-fluid bg-1 text-center">
    <h4>Welcome <%=user.username%></h4>
    </br>
</div></br></br>

<div class = "container upload_container">
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Upload Photo ??</h3>
                </div></br></br>
                <% if(message.length>0){%>
                <div style="color:Red ;padding-left: 50px" class= "alert alert-danger" role = "alert"><%= message %></div>
                <%}%>

                <div class ="uploadForm">
                    <form action="/upload" method = "POST" enctype="multipart/form-data">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="TITLE" name="title"  type="text" required>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="DESCRIPTION" name="description"  type="text" value="" required>
                            </div>
                            <div class="form-group">
                                <input type ='file' name = 'file' id= 'validatedCustomFile'
                                       class = 'btn btn-default'>
                            </div>
                            </br>
                            <input type ='submit' value ='Submit' class="btn btn-primary">
                        </fieldset>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div></br></br>
<div class="container-fluid bg-1 text-center">
    <h4 >Your Photo Stream</h4>
</div></br></br>


<div ng-if='imagePresent' ng-repeat="filename in filenames" class="responsive">
    <div class = 'gallery'>
        <a target="_blank" href="image/{{filename}}">

            <img src="image/{{filename}}" alt="">

        </a>
    </div>

</div>
<div ng-if = "imageNotPresent">
    <h5>No Image to display</h5>
</div>

<script src="../controllers/profile.controller.js"></script>
<script>
    var user1 = '<%=user.username%>';
    angular.module('app').constant("User",user1);
</script>
</body>
</html>

